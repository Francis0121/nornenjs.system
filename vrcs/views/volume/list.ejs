<!DOCTYPE html>
<html>
<head lang="en">

    <meta charset="UTF-8">
    <title>3D Volume Rendering Cloud System</title>

    <link rel='stylesheet' href='/stylesheets/default.css' />
    <link rel='stylesheet' href='/stylesheets/layout.css' />
    <link rel='stylesheet' href='/jquery-ui-1.11.2.custom/jquery-ui.min.css' />

    <script src='/javascripts/jquery-1.11.1.min.js'></script>
    <script src='/jquery-ui-1.11.2.custom/jquery-ui.min.js'></script>

    <script>
        $(function(){
            $('#volume_rendering tbody tr').on('click', function(){
                var pn = $(this).attr('data-pn');
                location.href='../stream/volumepn/'+pn;
            });
        });
    </script>

</head>
<body>

<header class="layout_header_wrap">
    <div class="layout_header">
        <ul class="left">
            <li class="symbol">
                <span class="mark">Symbol</span>
                <a href="/">Home</a>
            </li>
            <li class="history">
                <span class="mark">Nav</span>
                <a href="/volume">Volume Data List</a>
            </li>
        </ul>
        <ul class="right">
            <li class="help">
                <span class="mark">Question Mark</span>
                <a href="/">Help</a>
            </li>
            <li>
                <a href="/">Contact</a>
            </li>
            <% if ( user == undefined ) { %>
            <li>
                <a href="/signin/join">Join</a>
            </li>
            <li>
                <a href="/signin">Sign In</a>
            </li>
            <% } else { %>
            <li>
                <a href="/signin/logout">Log out</a>
            </li>
            <li class="user">
                <span class="mark">User Mark</span>
                <a href="/signin/join"><%=user.username%></a>
            </li>
            <% } %>
        </ul>
    </div>
</header>

<section class="layout_section_wrap">
    <div class="layout_section">

        <article class="list_content">

            <header>
                <ul>
                    <li class="left">
                        <span>empty</span>
                        <h4>Volume Data List</h4>
                    </li>
                    <li class="right">
                        <a href="/volume/upload" class="upload_btn">
                            <span class="mark"></span>
                            <span class="text">Upload</span>
                        </a>
                    </li>
                </ul>
            </header>

            <table id="volume_rendering">
                <thead>
                <tr>
                    <th class="no">
                        <span>No.</span>
                    </th>
                    <th class="title">
                        <span>Title.</span>
                    </th>
                    <th class="filename">
                        <span>File Name.</span>
                    </th>
                    <th class="registrationdate">
                        <span>Registration Date.</span>
                    </th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <td colspan="4">

                    </td>
                </tr>
                </tfoot>
                <tbody>
                    <%
                    for(var i=0; i< volumes.length; i++) {
                        var volume = volumes[i];
                    %>
                    <tr data-pn="<%=volume.pn%>">
                        <td><%=volume.pn%></td>
                        <td><%=volume.title%></td>
                        <td><%=volume.file_name%></td>
                        <td><%=volume.input_date%></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

        </article>

    </div>
</section>

<footer class="layout_footer_wrap">
    <div class="layout_footer">
        <span>Copyright(c) Teriusbin.lee. Francis.kim. All rights reserved.</span>
    </div>
</footer>

</body>
</html>
