#!/usr/bin/env node
var app = require('../app');
var http = require('http');
var server = http.createServer(app);

var io = require('socket.io').listen(server);
var socketQueue = [];
var activeCount = 0;

io.sockets.on('connection', function(socket){

    socket.on('join', function(){
        var clientId = socket.id;
        var message = {
            error : '',
            success : false,
            clientId : clientId
        };

        if(activeCount < 3){
            activeCount++;
            message.success = true;
        }else{
            socketQueue.push(clientId);
            message.error = 'Visitor limit';
        }
        
        socket.emit('message', message);
    });

    socket.on('disconnect', function () {
        activeCount--;
        var clientId = socketQueue.shift();
        if(clientId != undefined){
            socket.broadcast.to(clientId).emit('user_disconnected');
        }
    });

});

var NornenjsServer = require('../nornenjs/lib/server').NornenjsServer;
var nornenjsServer = new NornenjsServer();
nornenjsServer.createServer(9000);

app.set('port', process.env.PORT || 3000);
var server = server.listen(app.get('port'), function() {
    console.log('Express server listening on port ' + server.address().port);
});

